extends common/layout

block layout-content
  .container
    h1 Edit Position
    if err
      .error-message= err
    
    form(action=`/editPosition/${position._id}` method="POST")
      div.form-group
        label(for="fullName") Full Name:
        input(type="text" id="fullName" name="fullName" value=position.fullName required)
      
      div.form-group
        label(for="email") Email:
        input(type="email" id="email" name="email" value=position.email required)
      
      div.form-group
        label(for="title") Title:
        input(type="text" id="title" name="title" value=position.title required)
      
      div.form-group
        label(for="description") Description:
        textarea(id="description" name="description")= position.description
      
      div.form-group
        label(for="role") Role:
        select(id="role" name="role" required)
          option(value="employee" selected=position.role === 'employee') Employee
          option(value="manager" selected=position.role === 'manager') Manager
          option(value="admin" selected=position.role === 'admin') Admin
      button(type="submit") Save Changes
